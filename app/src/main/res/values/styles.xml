<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TeamLabelTextViewStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#AAAAAA</item>
    </style>

    <style name="ScoreTextViewStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">60sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TeamALabels" parent="TeamLabelTextViewStyle">
        <item name="android:gravity">left</item>
    </style>

    <style name="TeamBLabels" parent="TeamLabelTextViewStyle">
        <item name="android:gravity">right</item>
    </style>


    <!--             BUTTONS                 -->
    <style name="ScoreButtonStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="LongScoreButtonStyle" parent="ScoreButtonStyle">
        <item name="android:layout_width">120dp</item>
    </style>
</resources>
